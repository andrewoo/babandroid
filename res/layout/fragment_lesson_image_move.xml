<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_dv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_trumpet_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dv_view"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/input_white_p" />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/input_white_p" />

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_marginRight="10dp"
                android:background="@drawable/input_white_p" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_white_p" />

                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_white_p" />
            </LinearLayout>

            <ImageView
                android:layout_width="200dip"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dv_view" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_dv_view"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_white_p"
                    android:src="@drawable/pp_18" />

                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_white_p"
                    android:src="@drawable/pp_20" />

                <ImageView
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_white_p"
                    android:src="@drawable/pp_21" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/input_white_p"
                        android:src="@drawable/pp_22" />

                    <ImageView
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/input_white_p"
                        android:src="@drawable/pp_23" />
                </LinearLayout>

                <ImageView
                    android:layout_width="200dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/mizige" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>