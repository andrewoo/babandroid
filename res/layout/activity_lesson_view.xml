<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.hw.chineseLearn"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/chinese_skill_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title"
        layout="@layout/main_title_view" />

    <ImageView
        android:id="@+id/iv_unit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/lu1_1_1" />

    <at.technikum.mti.fancycoverflow.FancyCoverFlow
        android:id="@+id/gallery"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        fcf:maxRotation="0"
        fcf:scaleDownGravity="0.5"
        fcf:unselectedAlpha="0.8"
        fcf:unselectedScale="0.8"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chinese_skill_lOGIN_BULE"
            android:gravity="center"
            android:padding="15dp"
            android:text="START"
            android:textColor="@color/floralwhite"
            android:textSize="@dimen/text_s18" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chinese_skill_green"
            android:gravity="center"
            android:padding="15dp"
            android:text="REVIEW"
            android:textColor="@color/floralwhite"
            android:textSize="@dimen/text_s18" />

        <TextView
            android:id="@+id/tv_locked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chinese_skill_locked_grey"
            android:gravity="center"
            android:padding="15dp"
            android:text="LOCKED"
            android:textColor="@color/floralwhite"
            android:textSize="@dimen/text_s18" />
    </RelativeLayout>

</LinearLayout>