<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/tv_profession_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="职业"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/text_s16"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_grey_white"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="15dp"
        android:text="接单价格："
        android:textColor="@color/grey"
        android:textSize="@dimen/text_s14"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@drawable/bg_white_to_grey"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低价格"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/text_s14" />

        <EditText
            android:id="@+id/et_price_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入最低价格"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dip"
            android:textColor="@color/deep_grey"
            android:textColorHighlight="@color/min_grey"
            android:textSize="@dimen/text_s14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/text_s14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_to_grey"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高价格"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/text_s14" />

        <EditText
            android:id="@+id/et_price_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入最高价格"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dip"
            android:textColor="@color/deep_grey"
            android:textColorHighlight="@color/min_grey"
            android:textSize="@dimen/text_s14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/text_s14" />
    </LinearLayout>

</LinearLayout>