<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/dialog_default_style"
    android:orientation="vertical">
    
    <Button
        android:id="@+id/dialog_chat_title"
        style="@style/dialog_msg_alert_txt_style"
        android:textColor="#3F81DF"
        android:clickable="false"
        android:background="@drawable/dialog_top_btn_bg"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbc9ca" />

    <Button
        android:id="@+id/dialog_chat_copy"
        style="@style/dialog_msg_alert_txt_style"
        android:background="@drawable/list_item_bg"
        android:text="@string/str_copy" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbc9ca" />

    <Button
        android:id="@+id/dialog_chat_delete"
        style="@style/dialog_msg_alert_txt_style"
        android:background="@drawable/dialog_bottom_btn_bg"
        android:text="@string/str_delete" />

</LinearLayout>