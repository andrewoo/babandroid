<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_white"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title"
        layout="@layout/main_title_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:weightSum="1"
                android:layout_margin="5dip"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.util.weight.SelfGridView
                    android:id="@+id/gridview_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:listSelector="@android:color/transparent"
                    android:longClickable="true"
                    android:maxHeight="700dp"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="2dp" >
                </com.util.weight.SelfGridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:text="请您提交6张活动照和形象照"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/layout_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        
                        <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="10dip"
	                        android:layout_marginRight="10dip"
	                        android:text="自报价（必填）"
	                        android:textColor="@color/grey"
	                        android:textSize="14sp" />

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:gravity="center_vertical"
                             android:orientation="horizontal" >

                             <EditText
                                 android:id="@+id/et_price_low"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_margin="5dip"
                                 android:digits="0123456789"
                                 android:ems="5"
                                 android:gravity="center"
                                 android:background="@drawable/input_selector_white"
                                 android:inputType="phone"
                                 android:maxLength="6"
                                 android:padding="5dip"
                                 android:singleLine="true"
                                 android:textColor="@color/black"
                                 android:textSize="14sp" />

                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:padding="5dip"
                                 android:singleLine="true"
                                 android:text="元"
                                 android:textColor="@color/black"
                                 android:textSize="14sp" />
                         </LinearLayout>

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:orientation="horizontal" >
                        
                        <CheckBox
                            android:id="@+id/cb_videolink"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="10dip"
	                        android:layout_marginRight="10dip"
	                        android:button="@null"
		                    android:drawableLeft="@drawable/ck_selector_red"
	                        android:text="提供视频链接"
	                        android:textColor="@color/grey"
	                        android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/btn_upload_photo"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_selector_login"
                        android:gravity="center"
                        android:padding="10dip"
                        android:singleLine="true"
                        android:text="确认报名"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        
        <LinearLayout
		    android:id="@+id/layout_show_pic"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/btn_selector_grey"
		    android:gravity="center"
		    android:orientation="horizontal" >
		    
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/img_show_flag" />
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dip"
				android:text="预览"
				android:textColor="@color/grey"
				android:textSize="15sp" />
		
		</LinearLayout>
                    
    </LinearLayout>

</LinearLayout>