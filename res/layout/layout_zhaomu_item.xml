<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
	        android:paddingBottom="@dimen/notice_detail_bottom_padding"
	        android:paddingTop="@dimen/notice_detail_top_padding" >
            
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:orientation="horizontal"
	            android:paddingLeft="@dimen/notice_detail_left_padding"
	            android:paddingRight="@dimen/notice_detail_right_padding" >
	            
	            <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="25dip"
		            android:adjustViewBounds="true"
		            android:scaleType="centerInside"
		            android:src="@drawable/img_notic_flag6" />
	
	            <TextView
	                android:id="@+id/tv_position_title"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="5dip"
	                android:ellipsize="end"
	                android:gravity="center_vertical"
	                android:maxLines="2"
	                android:text="模特"
	                android:textColor="@color/color_orange_red"
	                android:textSize="14sp" />
	
	            <TextView
	                android:id="@+id/iv_position_flag"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingBottom="@dimen/notice_detail_bottom_padding"
	                android:paddingTop="@dimen/notice_detail_top_padding"
	                android:text="（5名）"
	                android:textColor="@color/color_orange_red"
	                android:textSize="14sp" />
	
	        </LinearLayout>
        
        	<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_position_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="@dimen/notice_detail_bottom_padding"
                    android:paddingRight="@dimen/notice_detail_right_padding"
                    android:paddingTop="@dimen/notice_detail_top_padding"
                    android:text="已报名：12"
                    android:textColor="@color/color_orange_red"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_signup_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_darkgrey"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="@dimen/notice_detail_bottom_padding"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="@dimen/notice_detail_top_padding"
                    android:text="报名已关闭"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>
            
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dip"
            android:background="@color/white"
	        android:paddingBottom="@dimen/notice_detail_bottom_padding"
	        android:paddingTop="@dimen/notice_detail_top_padding"
            android:paddingLeft="@dimen/notice_detail_left_padding"
            android:paddingRight="@dimen/notice_detail_right_padding" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_position_gander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="性别不限"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dip"
            android:background="@color/white"
	        android:paddingBottom="@dimen/notice_detail_bottom_padding"
	        android:paddingTop="@dimen/notice_detail_top_padding"
            android:paddingLeft="@dimen/notice_detail_left_padding"
            android:paddingRight="@dimen/notice_detail_right_padding" >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="价格"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_position_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="2000元"
                android:textColor="@color/color_orange_red"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="1dip"
            android:background="@color/white"
	        android:paddingBottom="@dimen/notice_detail_bottom_padding"
	        android:paddingTop="@dimen/notice_detail_top_padding"
            android:paddingLeft="@dimen/notice_detail_left_padding"
            android:paddingRight="@dimen/notice_detail_right_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                
                <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="@dimen/notice_detail_bottom_padding"
					android:paddingTop="@dimen/notice_detail_top_padding"
					android:text="要求："
					android:textColor="@color/black"
					android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_position_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingBottom="@dimen/notice_detail_bottom_padding"
                    android:text="最好有车展主持经验，形象气质好，一男一女，公司负责化妆师和服装"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_need_interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/notice_detail_top_padding"
                    android:layout_marginTop="@dimen/notice_detail_bottom_padding"
                    android:background="@color/color_orange"
                    android:padding="3dip"
                    android:text="需要面试"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_position_baoming"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dip"
                android:background="@drawable/dot_orange_n"
                android:gravity="center"
                android:padding="5dip"
                android:visibility="gone"
                android:text="报名"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_timeaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/notice_detail_left_padding"
            android:paddingRight="@dimen/notice_detail_right_padding"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_position_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="7月18日-7月31日"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_position_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="深圳市"
                android:textColor="@color/dark_grey"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_signup_nums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/notice_detail_left_padding"
            android:paddingRight="@dimen/notice_detail_right_padding"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_num_signed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="已报名：12"
                android:textColor="@color/color_orange_red"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_num_waited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="待定：5"
                android:textColor="@color/color_orange_red"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_num_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:paddingBottom="@dimen/notice_detail_bottom_padding"
                android:paddingTop="@dimen/notice_detail_top_padding"
                android:text="确认：3"
                android:textColor="@color/color_orange_red"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>