<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slideswitch="http://schemas.android.com/apk/res/com.hw.chineseLearn"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title"
        layout="@layout/main_title_view" />

    <com.util.weight.ElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/min_grey" />

                <RelativeLayout
                    android:id="@+id/rel_sound_effect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"
                    android:background="@drawable/bg_white_to_grey"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/setting_sound_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/img_icon"
                        android:text="Sound Effect"
                        android:textColor="@color/deep_grey"
                        android:textSize="@dimen/text_s14" />

                    <com.util.weight.SlideSwitch
                        android:id="@+id/ck_sound_effect"
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        slideswitch:isOpen="true"
                        slideswitch:shape="circle"
                        slideswitch:themeColor="@color/chinese_skill_blue" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/min_grey" />

                <RelativeLayout
                    android:id="@+id/rel_character_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"
                    android:background="@drawable/bg_white_to_grey"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/setting_char_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/img_icon"
                        android:text="Character test"
                        android:textColor="@color/deep_grey"
                        android:textSize="@dimen/text_s14" />

                    <com.util.weight.SlideSwitch
                        android:id="@+id/ck_character_test"
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        slideswitch:isOpen="true"
                        slideswitch:shape="circle"
                        slideswitch:themeColor="@color/chinese_skill_blue" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/min_grey" />

                <RelativeLayout
                    android:id="@+id/rel_check_tone_when_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.5dp"
                    android:background="@drawable/bg_white_to_grey"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/setting_tone_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/img_icon"
                        android:text="Check TONE when test"
                        android:textColor="@color/deep_grey"
                        android:textSize="@dimen/text_s14" />

                    <com.util.weight.SlideSwitch
                        android:id="@+id/ck_check_tone_when_test"
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        slideswitch:isOpen="false"
                        slideswitch:shape="circle"
                        slideswitch:themeColor="@color/chinese_skill_blue" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/min_grey" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/min_grey" />

                <RelativeLayout
                    android:id="@+id/rel_reminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_to_grey"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_vertical"
                    android:padding="15dp" >

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/setting_reminder_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/img_icon"
                        android:text="Reminders"
                        android:textColor="@color/deep_grey"
                        android:textSize="@dimen/text_s14" />

                    <com.util.weight.SlideSwitch
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        slideswitch:isOpen="false"
                        slideswitch:shape="circle"
                        slideswitch:themeColor="@color/chinese_skill_blue" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/min_grey" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_white_to_grey"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:text="Logou out"
                    android:textColor="@color/chinese_skill_blue"
                    android:textSize="@dimen/text_s14" />
            </RelativeLayout>
        </LinearLayout>
    </com.util.weight.ElasticScrollView>

</LinearLayout>