<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_view"
        layout="@layout/main_title_view"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="5dip" >

        <LinearLayout
            android:id="@+id/layout_top_reminder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

			<TextView
				android:id="@+id/tv_reminder"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="5dip"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:text="职业：最少选择一个地点，可多选"
				android:textColor="@color/grey"
				android:textSize="@dimen/text_s12" />
	              
		    <TextView
			     android:id="@+id/ck_city_all"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_margin="5dip"
			     android:padding="5dip"
			     android:gravity="center"
			     android:background="@drawable/btn_selector_orange"
			     android:singleLine="true"
			     android:text="全选"
			     android:minEms="4"
			     android:textSize="@dimen/text_s14"
			     android:textColor="@color/white" />
			    
		</LinearLayout>
        
        <ListView
            android:id="@+id/lv_city"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dip"
            android:cacheColorHint="#00000000"
            android:divider="@color/light_grey_white"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:focusableInTouchMode="true"
            android:listSelector="@color/transparent"
			android:scrollbars="none" >
        </ListView>
        
    </LinearLayout>
</LinearLayout>