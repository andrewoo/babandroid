<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title"
        layout="@layout/main_title_view" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/container1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/container2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/container3"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/container4"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/img_title_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/main_nav_padding"
        android:paddingTop="@dimen/main_nav_padding" >

        <Button
            android:id="@+id/home_rb_nav01"
            style="@style/main_btn_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_navi_one"
            android:text="@string/home_nav01"
            android:textColor="@drawable/rb_selector_textcolor" />

        <Button
            android:id="@+id/home_rb_nav02"
            style="@style/main_btn_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_navi_two"
            android:text="@string/home_nav02"
            android:textColor="@drawable/rb_selector_textcolor" />

        <Button
            android:id="@+id/home_rb_nav03"
            style="@style/main_btn_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_navi_three"
            android:paddingTop="3dp"
            android:text="@string/home_nav03"
            android:textColor="@drawable/rb_selector_textcolor" />
    </LinearLayout>

</LinearLayout>