<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_input_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey_white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_view"
        layout="@layout/main_title_view"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="昵称"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_s14" />

                    <EditText
                        android:id="@+id/et_set_nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="38dip"
                        android:background="@null"
                        android:hint="设置昵称"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@null"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/text_s14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dip"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="性别"
                        android:padding="5dip"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_s14" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dip"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_weight="1"
                            android:background="@drawable/btn_radio_selector_left1"
                            android:button="@null"
                            android:checked="true"
                            android:ems="5"
                            android:gravity="center"
                            android:paddingBottom="7dip"
                            android:paddingTop="7dip"
                            android:singleLine="true"
                            android:text="男"
                            android:textColor="@drawable/text_style_grey_to_white"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_radio_selector_center1"
                            android:button="@null"
                            android:ems="5"
                            android:gravity="center"
                            android:paddingBottom="7dip"
                            android:paddingTop="7dip"
                            android:singleLine="true"
                            android:text="女"
                            android:textColor="@drawable/text_style_grey_to_white"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/rb_secret"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/btn_radio_selector_right1"
                            android:button="@null"
                            android:ems="5"
                            android:gravity="center"
                            android:paddingBottom="7dip"
                            android:paddingTop="7dip"
                            android:singleLine="true"
                            android:text="保密"
                            android:textColor="@drawable/text_style_grey_to_white"
                            android:textSize="13sp" />
                    </RadioGroup>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rel_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/bg_white_to_grey"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/text_address0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="职业"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />
                    
                    <TextView
                        android:id="@+id/text_necessory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/text_address0"
                        android:text="  必填"
                        android:visibility="gone"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />

                    <LinearLayout
                        android:id="@+id/lin_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/img_arrow_address"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/text_profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/img_arrow_address"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />

                    <ImageView
                        android:id="@+id/img_arrow_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/bg_white_to_grey"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/text_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="接单地点"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />

                    <TextView
                        android:id="@+id/text_necessory1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@+id/text_address1"
                        android:text="  必填"
                        android:visibility="gone"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />

                    <ImageView
                        android:id="@+id/img_arrow_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />

                    <TextView
                        android:id="@+id/text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/img_arrow_address1"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/bg_white_to_grey"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="接单价格"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_s14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/arrow" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="完善资料后，我们会给您推荐合适的新通告"
                android:textColor="@color/mid_grey"
                android:textSize="@dimen/text_s12" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_title_selector2"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="跳过"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/text_s14" />
    </LinearLayout>

</LinearLayout>