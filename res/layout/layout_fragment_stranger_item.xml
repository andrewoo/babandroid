<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="12dp" >

    <com.util.weight.CircleImageView
        android:id="@+id/id_item_stranger_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/id_item_stranger_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/id_item_stranger_image"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:textSize="@dimen/text_middle_size" />

    <TextView
        android:id="@+id/id_item_stranger_latestmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_item_stranger_image"
        android:layout_below="@id/id_item_stranger_username"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/id_item_stranger_image"
        android:textColor="@color/gray"
        android:gravity="bottom"
        android:singleLine="true"
        android:textSize="@dimen/text_default_size" />

    <TextView
        android:id="@+id/id_item_stranger_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_default_size" />

</RelativeLayout>