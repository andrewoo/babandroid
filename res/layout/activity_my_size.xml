                    android:id="@+id/t_cup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="罩杯"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_s14" />

