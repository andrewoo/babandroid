<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_checked="true" android:color="@color/color_orange_red"/>    
    <!-- not selected -->    
    <item android:state_checked="false" android:color="@color/grey"/>  
    
    <item android:state_pressed="true" android:color="@color/color_orange_red"/>    
    <!-- not selected -->    
    <item android:state_pressed="false" android:color="@color/grey"/> 
    <item android:color="@color/grey"/> 
</selector> 
