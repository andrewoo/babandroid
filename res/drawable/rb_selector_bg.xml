<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/chat_btn_pressed" />

                    <corners android:bottomLeftRadius="0dp" />
                </shape></item>
            <item android:bottom="3dp"><shape>
                    <solid android:color="#FFFFFF" />

                    <corners android:bottomLeftRadius="0dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_checked="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/chat_btn_pressed" />

                    <corners android:bottomLeftRadius="0dp" />
                </shape></item>
            <item android:bottom="3dp"><shape>
                    <solid android:color="#FFFFFF" />

                    <corners android:bottomLeftRadius="0dp" />
                </shape></item>
        </layer-list></item>
    <item android:state_selected="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/chat_btn_pressed" />

                    <corners android:bottomLeftRadius="0dp" />
                </shape></item>
            <item android:bottom="3dp"><shape>
                    <solid android:color="#FFFFFF" />

                    <corners android:bottomLeftRadius="0dp" />
                </shape></item>
        </layer-list></item>
    <item android:drawable="@drawable/btn_white_no_corners"></item>

</selector>