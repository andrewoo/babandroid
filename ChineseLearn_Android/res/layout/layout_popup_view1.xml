<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey_white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_pick_from_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_to_grey"
        android:gravity="left|center_vertical"
        android:padding="10dip"
        android:text="你确定要举报这条通告吗"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_s13" />

    <TextView
        android:id="@+id/tv_pick_from_dicm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_white_to_grey"
        android:gravity="center"
        android:padding="10dip"
        android:text="举报此通告"
        android:textColor="@color/color_yanghong"
        android:textSize="@dimen/text_s14" />

    <TextView
        android:id="@+id/tv_show_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_to_grey"
        android:gravity="center"
        android:padding="10dip"
        android:text="取消"
        android:textColor="@color/deep_grey"
        android:textSize="@dimen/text_s14" />

</LinearLayout>