<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_input_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/chinese_skill_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:id="@+id/ly_etuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/closeicon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Forgot Password"
                    android:textColor="@color/floralwhite"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Enter your email address.you will receive a confirmation email with instruction to reset your password "
                android:textColor="@color/floralwhite"
                android:textSize="14sp" />

             <TextView
                 android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:visibility="invisible"
                android:textColor="@color/floralwhite"
                android:textSize="14sp" />
            
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@null"
                android:hint="Emial"
                android:imeOptions="actionNext"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="@color/floralwhite"
                android:textColorHint="@color/floralwhite"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/min_grey" />

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_blue_corner_login_bg"
                android:gravity="center"
                android:padding="10dip"
                android:singleLine="true"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/text_s15"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>