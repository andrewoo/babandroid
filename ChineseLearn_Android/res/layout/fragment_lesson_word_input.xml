<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_play_normal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/strokes_order_play_sound_onclick" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我是男人"
            android:textColor="@color/black"
            android:textSize="@dimen/text_s18" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_play_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/slow_play_2"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_white_p"
        android:minHeight="150dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:background="@null"
            android:gravity="top|left"
            android:hint="input the answer"
            android:minHeight="150dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_s18" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/btn_input_method"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/chatting_setmode_keyboard_btn_normal"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>