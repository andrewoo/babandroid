<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_touming"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/lin_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chatfrom_bg_voice_downloading"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lin_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/txt_sentence_cn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="你好！"
                android:textColor="@color/deep_grey"
                android:textSize="@dimen/text_s14" />

            <TextView
                android:id="@+id/txt_sentence_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Hello！"
                android:textColor="@color/mid_grey"
                android:textSize="@dimen/text_s14" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_funcations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_record"
                android:src="@drawable/strokes_order_play_sound_onclick" />

            <ImageView
                android:id="@+id/img_record"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/recorder_animate_bg"
                android:src="@drawable/recorder_animate_01" />

            <ImageView
                android:id="@+id/img_loop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_record"
                android:src="@drawable/unloop_play" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>