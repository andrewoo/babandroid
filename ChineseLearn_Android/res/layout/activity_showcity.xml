<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_view"
        layout="@layout/main_title_view"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
            		android:paddingRight="10dip"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_s15" />

                <View
	                android:layout_width="match_parent"
	                android:layout_height="0.5dp"
	                android:background="@color/light_grey_white" />
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                    
                    <LinearLayout
                        android:id="@+id/layout_gander_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/btn_selector_btnnogrey"
                        android:gravity="center" >
                        
                        <TextView
	                        android:id="@+id/tv_gander_all"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:paddingTop="10dip"
	                        android:paddingBottom="10dip"
	                        android:gravity="center"
	                        android:singleLine="true"
	                        android:text="不限"
	                        android:maxEms="5"
	                        android:textSize="@dimen/text_s14"
	                        android:textColor="@drawable/rb_selector_textcolor1" />
                        
                    </LinearLayout>
                    
                    <View
		                android:layout_width="0.5dp"
		                android:layout_height="match_parent"
		                android:background="@color/light_grey_white" />

					<LinearLayout
					    android:id="@+id/layout_gander_w"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/btn_selector_btnnogrey"
                        android:gravity="center" >
	                    
					    <ImageView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:adjustViewBounds="true"
					        android:scaleType="center"
					        android:src="@drawable/img_gander_w" />
					    
	                    <TextView
	                        android:id="@+id/tv_woman"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:paddingTop="10dip"
	                        android:paddingBottom="10dip"
	                        android:paddingLeft="5dip"
	                        android:gravity="center"
	                        android:singleLine="true"
	                        android:text="女"
	                        android:maxEms="5"
	                        android:textSize="@dimen/text_s14"
	                        android:textColor="@drawable/rb_selector_textcolor1" />
                    
                    </LinearLayout>
                    
					<View
		                android:layout_width="0.5dp"
		                android:layout_height="match_parent"
		                android:background="@color/light_grey_white" />
                    
					<LinearLayout
					    android:id="@+id/layout_gander_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/btn_selector_btnnogrey"
                        android:gravity="center" >
                        
					    <ImageView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:adjustViewBounds="true"
					        android:scaleType="center"
					        android:src="@drawable/img_gander_m" />
					    
	                    <TextView
	                        android:id="@+id/tv_man"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:paddingTop="10dip"
	                        android:paddingBottom="10dip"
	                        android:paddingLeft="5dip"
	                        android:gravity="center"
	                        android:singleLine="true"
	                        android:text="男"
	                        android:maxEms="5"
	                        android:textSize="@dimen/text_s14"
	                        android:textColor="@drawable/rb_selector_textcolor1" />
                    
                    </LinearLayout>
                    
                </LinearLayout>
                
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey_white" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dip"
                android:background="@color/light_grey_white" />
            
            <LinearLayout
                android:id="@+id/layout_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
            	android:paddingRight="10dip"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_to_grey"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:text="地点"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_s15" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="right|center_vertical"
                    android:text="不限"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_s14" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/arrow" />
                
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey_white" />

            <LinearLayout
                android:id="@+id/layout_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
            	android:paddingRight="10dip"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_to_grey"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职业"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_s15" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:padding="5dip"
                    android:gravity="right|center_vertical"
                    android:text="不限"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_s14" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/arrow" />
                
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey_white" />
            
            <LinearLayout
                android:id="@+id/layout_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
            	android:paddingRight="10dip"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_to_grey"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:text="价格"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_s15" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:padding="5dip"
                    android:gravity="right|center_vertical"
                    android:text="不限"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_s14" />
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/arrow" />
                
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey_white" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dip"
                android:background="@color/light_grey_white" />
            
            <LinearLayout
                android:id="@+id/layout_usemine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
            	android:paddingRight="10dip"
                android:orientation="horizontal"
                android:background="@drawable/bg_white_to_grey"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dip"
                    android:paddingBottom="5dip"
                    android:layout_weight="1"
                    android:text="根据我的资料进行筛选"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_s15" />

                <CheckBox
                    android:id="@+id/ck_use_mine"
                    android:layout_width="43dp"
                    android:layout_height="30dip"
                    android:layout_gravity="left|center_vertical"
                    android:button="@null"
                    android:background="@drawable/ck_selector_green"
                    android:gravity="left|center_vertical" />
                
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_grey_white" />
            
            <TextView
				android:id="@+id/tv_reminder"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
            	android:paddingRight="10dip"
				android:singleLine="true"
				android:gravity="center_vertical"
				android:text="当此开关打开时，筛选条件不能手动更改"
				android:textColor="@color/grey"
				android:textSize="@dimen/text_s12" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>