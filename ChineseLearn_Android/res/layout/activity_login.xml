<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_input_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/chinese_skill_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:src="@drawable/closeicon" />

            <ImageView
                android:id="@+id/iv_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/login_appicon" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:padding="5dip"
                android:text="Email"
                android:textColor="@color/floralwhite"
                android:textSize="14sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="@color/floralwhite"
                android:textColorHint="@color/floralwhite"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/min_grey" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:padding="5dip"
                android:text="Password"
                android:textColor="@color/floralwhite"
                android:textSize="14sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:drawableRight="@drawable/viewpassword"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="5dip"
                android:singleLine="true"
                android:textColor="@color/floralwhite"
                android:textColorHint="@color/floralwhite"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <View
                android:id="@+id/line_password"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/min_grey" />

            <TextView
                android:id="@+id/tv_noty_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Password you entered is incorrect" 
                android:textColor="@color/red"
                android:textSize="14sp"
                android:visibility="invisible"
                />

            <LinearLayout
                android:id="@+id/layout_btn_login"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_blue_corner_login_bg"
                    android:gravity="center"
                    android:padding="10dip"
                    android:singleLine="true"
                    android:text="LOG IN "
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_s15"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Sign Up Now"
                    android:textColor="@color/floralwhite"
                    android:textSize="@dimen/text_s15" />

                <TextView
                    android:id="@+id/btn_forgot_psw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:paddingTop="10dp"
                    android:text="Forgot Password"
                    android:textColor="@color/floralwhite"
                    android:textSize="@dimen/text_s15" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>